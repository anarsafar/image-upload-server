{
    "compilerOptions": {
        "target": "ES2018",
        "baseUrl": "./src",
        "module": "commonjs",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node", "express"]
    },
    "include": ["src/**/*"]
}
